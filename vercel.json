{
  "builds": [
    {
      "src": "src/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/dist/(.*)",
      "dest": "/dist/$1"  // Mengarahkan ke folder dist untuk CSS
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"  // Mengarahkan ke folder assets untuk gambar
    },
    {
      "src": "/src/(.*)",
      "dest": "/src/$1"  // Mengarahkan ke folder src untuk JS
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.html"  // Mengarahkan permintaan ke index.html di folder src
    }
  ]
}
